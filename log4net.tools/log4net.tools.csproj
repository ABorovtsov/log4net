<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Alexander Borovtsov</Authors>
    <Copyright>Alexander Borovtsov</Copyright>
    <RepositoryUrl>https://github.com/ABorovtsov/log4net</RepositoryUrl>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageTags>log4net async logging forwarding</PackageTags>
    <PackageProjectUrl>https://github.com/ABorovtsov/log4net</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Tools for log4net users: 
- ForwardingAppenderAsync forwards LoggingEvents to a list of attached appenders asynchronously.</Description>
    <RepositoryType>git</RepositoryType>
    <Version>1.2.0</Version>
    <AssemblyVersion>1.2.0.0</AssemblyVersion>
    <PackageIcon>icon.png</PackageIcon>
    <FileVersion>1.2.0.0</FileVersion>
    <PackageReleaseNotes>- handle closing of the appender when the buffer is not empty;
- update the error handling;
- update tests.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.12" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
